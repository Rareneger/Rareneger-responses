ScreenManager:
    Screen:
        name: 'menu'
        BoxLayout:
            orientation: 'vertical'
            ActionBar:
                ActionView:
                    ActionPrevious:
                        title: 'Menu'
                        on_release: app.stop()
            BoxLayout:
                padding: (self.width * 0.1, 0, self.width * 0.1, 20)
                spacing: 50
                orientation: 'vertical'
                Message:
                    text: 'Respostas Rareneger'
                    font_size: (16 + (8/1920) * self.width)
                Button:
                    text: 'Responder'
                    on_release: app.responder_button()
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: 'doc id'
                        font_size: (12 + (8/1920) * self.width)
                    TextInput:
                        id: id_input
                        text:
                    Label:
                        id: id_error_message
    Screen:
        name: 'respostas'
        BoxLayout:
            orientation: 'vertical'
            ActionBar:
                ActionView:
                    ActionPrevious:
                        title: 'Respostas'
                        on_release: app.root.current = 'menu'
            BoxLayout:
                padding: (self.width * 0.1, self.width * 0.05, self.width * 0.1, self.width * 0.1)
                orientation: 'vertical'
                Message:
                    id: command_message
                    text: ''
                    font_size: (16 + (8/1920) * self.width)
                BoxLayout:
                    padding: (0, self.height * 0.5, 0, 0)
                    BoxLayout:
                        orientation: 'vertical'
                        Label:
                            text: 'Data'
                        TextInput:
                            id: date_input
                    BoxLayout:
                        orientation: 'vertical'
                        Label:
                            text: 'Hora'
                        TextInput:
                            id: time_input
                BoxLayout:
                    spacing: self.width * 0.05
                    Button:
                        text: '<'
                        on_release: app.messager.previous_row(); app.update_screen()
                        size_hint: (0.3, 0.4)
                    Button:
                        text: 'Enviar Mensagem'
                        on_release: app.enviar_mensagem_button()
                        size_hint_y: 0.4
                    Button:
                        text: '>'
                        on_release: app.messager.next_row(); app.update_screen()
                        size_hint: (0.3, 0.4)
    Screen:
        name: 'end'
        BoxLayout:
            orientation: 'vertical'
            ActionBar:
                ActionView:
                    ActionPrevious:
                        title: 'Fim'
                        on_release: app.root.current = 'menu'
            BoxLayout:
                orientation: 'vertical'
                padding: (self.width * 0.1, self.width * 0.05, self.width * 0.1, self.width * 0.1)
                Label:
                    text: 'Não há mais atendimentos para marcar'
                BoxLayout:
                    padding: (self.width * 0.3, 0, self.width * 0.3, 0)
                    Button:
                        text: '<'
                        on_release: app.messager.previous_row(); app.update_screen()
                        size_hint_y: 0.2
    Screen:
        name: 'loading'
        on_enter: app.send_message()
        Label:
            text: 'Carregando...'
